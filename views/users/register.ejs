

<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head') %>
<body>
  <%- include('../partials/header') %>
  <main><h2>Registrarse</h2>
    
    <div class="form-container">
    
    
    <form action="/registerController" method="post">
      <label for="name">Nombre:</label>
      <input type="text" id="name" name="name" required>
      <% if(locals.errores && locals.errores.nombre) {%>
        <p class="msg-error"> <i class="fa-solid fa-circle-exclamation"></i><%= errores.nombre.msg %></p>
      <% } %>
      <label for="email">Correo Electrónico:</label>
      <input type="email" id="email" name="email" required>
      <% if(locals.errores && locals.errores.correo) {%>
        <p class="msg-error"><i class="fa-solid fa-circle-exclamation"></i><%= errores.correo.msg %></p>
      <% } %>
      <label for="password">Contraseña:</label>
      <input type="password" id="password" name="password" required>
      <label for="confirm-password">Confirmar Contraseña:</label>
      <input type="password" id="confirm-password" name="confirm-password" required>
      <% if(locals.errores && locals.errores.contrasena) {%>
        <p class="msg-error"><i class="fa-solid fa-circle-exclamation"></i><%= errores.contrasena.msg %></p>
      <% } %>
      <button type="submit">Registrarse</button></div>
    </form>
  </main>
  <%- include('../partials/footer') %>
</body>
</html>